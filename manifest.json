{
  "manifest_version": 3,
  "name": "ProductivityPro",
  "version": "1.0.0",
  "description": "Track your productivity with time tracking, tasks, and goals",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "ProductivityPro"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}